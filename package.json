{
	"name": "livestream",
	"author": "Oliver Taylor <ollie@inqling.studio>",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build": "vite build --mode production",
		"check:error": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --output human",
		"dev:prod": "vite dev --mode production",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview --host",
		"sync": "svelte-kit sync",
		"vercel": "npx vercel env pull .env.development && npx vercel env pull .env.production  --environment production",
		"prepare": "husky install",
		"molly": "npx lilmolly"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,svelte,html,md,mdx,json,css}": "prettier  --write"
	},
	"devDependencies": {
		"@fontsource-variable/victor-mono": "^5.0.3",
		"@sveltejs/adapter-auto": "^3.1.0",
		"@sveltejs/adapter-node": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.18.1",
		"autoprefixer": "^10.4.16",
		"date-fns": "^3.2.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"eslint": "^8.56.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"postcss": "^8.4.33",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"prettier": "^3.2.1",
		"svelte-check": "^3.6.3",
		"svelte": "^4.2.8",
		"tailwind-merge": "2.2.0",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.11",
		"zod": "^3.22.4"
	},
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	}
}
